<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_pro_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="40dp"/>

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/img_view_pro"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/txt_pro_name"
        android:layout_margin="25dp"
        />

    <TextView
        android:id="@+id/txt_pro_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_view_pro"
        android:text="Price"
        android:textSize="25dp"
        />

    <TextView
        android:id="@+id/txt_pro_manufacture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_pro_price"
        android:text="manufactured date"
        android:textSize="25dp"
        />

    <TextView
        android:id="@+id/txt_pro_expiry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_pro_manufacture"
        android:text="Expiry Date"
        android:textSize="25dp"
        />

    <TextView
        android:id="@+id/txt_pro_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_pro_expiry"
        android:text="Description"
        android:textSize="25dp"
        />

    <TextView
        android:id="@+id/txt_pro_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_pro_description"
        android:text="Section"
        android:textSize="25dp"
        />



</RelativeLayout>